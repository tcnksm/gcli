package main

import (
	"fmt"
	"io"

	flag "github.com/tcnksm/mflag"
)

// Exit codes are int values that represent an exit code for a particular error.
const (
	ExitCodeOK    int = 0
	ExitCodeError int = 1 + iota
)

// CLI is the command line object
type CLI struct {
	// outStream and errStream are the stdout and stderr
	// to write message from the CLI.
	outStream, errStream io.Writer
}

// Run invokes the CLI with the given arguments.
func (cli *CLI) Run(args []string) int {

	// Define option flag parse
	flags := flag.NewFlagSet(Name, flag.ContinueOnError)
	flags.SetOutput(cli.errStream)
	flags.SetUsageSynopsis("{{ .Name }} [options]")
	{{ range .Flags }}
	fl{{ .Name }} := flags.{{.TypeString}}([]string{"{{.ShortName}}", "-{{.LongName}}"}, {{ .Default }}, "{{ .Description }}")
	{{ end }}
	flVersion := flags.Bool([]string{"v", "-version"}, false, "Print version information and quit.")

	// Parse commandline flag
	if err := flags.Parse(args[1:]); err != nil {
		return ExitCodeError
	}

	// Show version
	if *flVersion {
		fmt.Fprintf(cli.errStream, "%s version %s\n", Name, Version)
		return ExitCodeOK
	}

	{{ range .Flags }}
	_ = fl{{ .Name }}
	{{ end }}

	return ExitCodeOK
}
